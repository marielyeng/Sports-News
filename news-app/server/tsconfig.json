{
    "compilerOptions": {
        "target": "ES6",
        "lib": ["ES6", "ES5", "ES7", "DOM"],
        "allowJs": true,
        "esModuleInterop":true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "CommonJS",
        "outDir": "./build",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "build"]
}